{
    "version": "2.0.0",
    "tasks": [
        {
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "D:\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"D:\\Code\\C++\\baisc-algorithm\\exe\\test.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,  // 关键设置：不显示重用消息
                "clear": true
            },
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
			
		}
    ]
}